<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/config_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@android:color/transparent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Camera Config"
        android:textSize="35dp" />


    <LinearLayout
        android:id="@+id/SettingsLayout"
        android:orientation="vertical"
        android:layout_below="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sensitivity_ISO_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ISO: 50" />

        <SeekBar
            android:id="@+id/sensitivity_iso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="50"
            android:visibility="visible" />

        <TextView
            android:id="@+id/exposure_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Exposure Time: 100000 (ns)" />

        <SeekBar
            android:id="@+id/exposure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2000000"
            android:progress="100000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/frame_duration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Frame Duration: 50" />

        <SeekBar
            android:id="@+id/frame_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2147483647"
            android:progress="50"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>