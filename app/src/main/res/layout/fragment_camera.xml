<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.android.camera.utils.AutoFitSurfaceView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@android:color/transparent" />

    <ImageButton
        android:id="@+id/capture_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="bottom|center"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_shutter"
        android:contentDescription="@string/capture" />

    <LinearLayout
        android:id="@+id/SettingsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sensitivity_ISO_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="ISO: 50" />

        <SeekBar
            android:id="@+id/sensitivity_iso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="50"
            android:visibility="visible" />

        <TextView
            android:id="@+id/exposure_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Exposure Time: 100000 (ns)" />

        <SeekBar
            android:id="@+id/exposure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2000000"
            android:progress="100000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/frame_duration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Frame Duration: 50" />

        <SeekBar
            android:id="@+id/frame_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2147483647"
            android:progress="50"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>
