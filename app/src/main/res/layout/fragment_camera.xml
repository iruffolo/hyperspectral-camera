<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <FrameLayout
        android:id="@+id/ImageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.android.camera.utils.AutoFitSurfaceView
            android:id="@+id/view_finder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@android:color/transparent" />

        <ImageButton
            android:id="@+id/config_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="50dp"
            android:background="@android:drawable/ic_menu_info_details"
            android:scaleType="fitCenter"
            android:contentDescription="@string/configuration" />

        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|center"
            android:background="@drawable/ic_shutter"
            android:contentDescription="@string/capture" />
    </FrameLayout>>

    <FrameLayout
        android:id="@+id/SettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:id="@+id/overlay_config"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@android:color/white"
            android:foregroundTint="#B3FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sensitivity_ISO_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="@string/iso_text" />

            <SeekBar
                android:id="@+id/sensitivity_iso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="800"
                android:progress="500"
                android:visibility="visible" />

            <TextView
                android:id="@+id/exposure_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Exposure Time: 10000000 (ns)" />

            <SeekBar
                android:id="@+id/exposure_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="976800000"
                android:min="41280"
                android:progress="10000000" />

            <Switch
                android:id="@+id/gt_switch"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Ground Truth Mode" />

        </LinearLayout>
    </FrameLayout>
</FrameLayout>
